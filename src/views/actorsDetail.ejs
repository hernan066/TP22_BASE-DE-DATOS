<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= actor.last_name %>, <%= actor.first_name %> </title>
    <link rel='stylesheet' href='/css/style.css' />

</head>
<body>
    <%- include ('./partials/header') %> 
    
    <main>

        <h1><%= actor.last_name %>, <%= actor.first_name %> </h1>
        <br>
        <% if (!!actor.movies.length) { %>
            <ul>
                <% actor.movies.forEach(movie => { %>
                 <li><a href="/movies/detail/<%= movie.id %>"><%= movie.title %></a> </li>
                <% }) %>
            </ul>
         
        <% }else{ %>
    
            <p>El actor no tiene peliculas</p>
        <% } %>
    </main>
    
    
    

</body>
</html>